<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:fo="http://www.w3.org/1999/XSL/Format" version="1.0"
                xmlns:fox="http://xmlgraphics.apache.org/fop/extensions">
  <xsl:output encoding="UTF-8" indent="yes" method="xml"
              standalone="no" omit-xml-declaration="no"/>
  <xsl:template match="data">
    <fo:root font-size="8pt" font-family="arial" font-weight="normal">
      <fo:layout-master-set>
        <fo:simple-page-master master-name="page-master"
                               page-height="297mm" page-width="210mm" margin-top="5mm"
                               margin-bottom="5mm" margin-left="5mm" margin-right="5mm">

          <fo:region-body region-name="body" background-image="url(#writeImageUrl($data.invoiceCancelled))"
                          background-color="transparent" fox:background-image-width="200mm"
                          fox:background-image-height="296mm"/>
          <fo:region-before region-name="header" extent="5mm"
                            margin-bottom="5mm" margin-top="5mm"/>
          display-align="before" precedence="true" />
          <fo:region-after region-name="footer" extent="5mm"
                           margin-bottom="5mm" margin-top="5mm"/>
        </fo:simple-page-master>
      </fo:layout-master-set>
      <fo:page-sequence master-reference="page-master" writing-mode="rl-tb">

        <fo:static-content flow-name="header">
          <fo:block>
          </fo:block>
        </fo:static-content>

        <fo:static-content flow-name="footer">
          <fo:block>
            <fo:leader leader-length="100%" leader-pattern="rule"
                       rule-thickness="0.5px"/>
          </fo:block>
          <fo:table table-layout="fixed" width="100%">
              <fo:table-body>
                  <fo:table-row>
                      <fo:table-cell padding-after="0pt">
                          <fo:block-container>
                            <fo:block>
                            صفحة <fo:page-number/>
                            </fo:block>
                          </fo:block-container>
                       </fo:table-cell>
                       <fo:table-cell text-align="center" padding-before="2pt" padding-after="2pt"
                                                                      display-align="after">
                           <fo:block>الأصل للمستلم</fo:block>
                       </fo:table-cell>
                   </fo:table-row>
               </fo:table-body>
           </fo:table>
        </fo:static-content>

                <fo:flow flow-name="body" border-collapse="collapse"
                         reference-orientation="0">
                    <fo:table table-layout="fixed" width="100%">
                        <fo:table-body>
                            <fo:table-row>
                                <fo:table-cell padding-after="0pt">
                                    <fo:block>
                                        <fo:external-graphic content-height="10mm"
                                                             content-width="32mm"
                                                             scaling="uniform"
                                                             padding-left="2pt"
                                                             src="url('classpath:com/increff/commons/images/increff_image.png')">
                                        </fo:external-graphic>
                                    </fo:block>
                                </fo:table-cell>
                                <fo:table-cell text-align="center" padding-before="2pt" padding-after="2pt"
                                               display-align="after">
                                    <fo:block font-family="arial" font-size="11pt" font-weight="bold">
                                    فاتورة الضريبة
                                    </fo:block>
                                </fo:table-cell>
                                <fo:table-cell text-align="center" padding-before="2pt" padding-after="2pt"
                                               display-align="after">
                                    <fo:block font-family="arial" font-weight="bold" font-size="9pt">
                                      #writeString($data.vendorName)
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    <fo:block>
                        <fo:leader leader-length="100%" leader-pattern="rule"
                                   rule-thickness="0.5px"/>
                    </fo:block>
                    <!-- INVOICE INFORMATION -->
                    <fo:table table-layout="fixed" width="100%">
                        <fo:table-column column-width="proportional-column-width(21)"/>
                        <fo:table-column column-width="proportional-column-width(28)"/>
                        <fo:table-column column-width="proportional-column-width(22)"/>
                        <fo:table-column column-width="proportional-column-width(26)"/>
                        <fo:table-body>
                            <fo:table-row>
                                <fo:table-cell>
                                  <fo:block-container>
                                    <fo:block>رقم الفاتورة : #writeString($data.invoiceOrStockTransferNo)</fo:block>
                                    <fo:block>وقت : #writeDateTime($data.invoiceOrStockTransferTime)</fo:block>
                                    <fo:block>عملة : #writeString($data.currency)</fo:block>
                                  </fo:block-container>
                                </fo:table-cell>
                                <fo:table-cell>
                                    <fo:block>
                                        #writeBarcodeWithoutText($data.invoiceOrStockTransferNo)
                                    </fo:block>
                                </fo:table-cell>
                                <fo:table-cell>
                                  <fo:block-container>
                                    <fo:block>رقم الأمر : #writeString($data.orderNo)</fo:block>
                                    <fo:block>وقت : #writeDateTime($data.orderTime)</fo:block>
                                    <fo:block>رقم طلب القناة : #writeString($data.channelOrderNo)</fo:block>
                                  </fo:block-container>
                                </fo:table-cell>
                                <fo:table-cell>
                                    <fo:block>
                                        #writeBarcodeWithoutText($data.orderNo)
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    <fo:block>
                        <fo:leader leader-length="100%" leader-pattern="rule"
                                   rule-thickness="0px"/>
                    </fo:block>

          <!-- ADDRESS & TAX -->
          <fo:table table-layout="fixed" width="100%">
            <fo:table-column column-width="proportional-column-width(15)"/>
            <fo:table-column column-width="proportional-column-width(43)"/>
            <fo:table-column column-width="proportional-column-width(42)"/>
            <fo:table-header font-weight="bold">
              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block font-family="arial" font-weight="bold">  البائع  </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block font-family="arial" font-weight="bold">  المشتري  </fo:block>
                </fo:table-cell>
              </fo:table-row>
            </fo:table-header>

            <fo:table-body>
              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block font-family="arial" font-weight="bold">اسم : </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.fromPartyName)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.toPartyName)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block font-family="arial" font-weight="bold">عنوان : </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeAddress($data.fromAddress)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeAddress($data.shippingAddress)</fo:block>
                </fo:table-cell>
              </fo:table-row>


              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block font-family="arial" font-weight="bold">بريد إلكتروني : </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeEmail($data.fromAddress)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeEmail($data.shippingAddress)</fo:block>
                </fo:table-cell>
              </fo:table-row>

            </fo:table-body>
          </fo:table>

          <fo:block></fo:block>
          <fo:block></fo:block>

          <!-- LINE ITEMS -->
          <fo:block font-family="arial" font-weight="bold" font-size="9pt">
            <fo:leader leader-length="100%" leader-pattern="rule"
                       rule-thickness="0px"/>
            عناصر الفاتورة
          </fo:block>

          <fo:table width="100%" table-layout="fixed" padding-before="4pt">
            <fo:table-column column-number="1" column-width="5%"/> <!--# -->
            <fo:table-column column-number="2" column-width="15%"/><!--No.
							Accommodate EAN -->
            <fo:table-column column-number="3" column-width="25%"/><!--Description -->
            <fo:table-column column-number="4" column-width="5%"/><!--Qty
							up to 100,000 -->
            <fo:table-column column-number="5" column-width="11%"/><!--VAT
							up to 100,000 -->
            <fo:table-column column-number="6" column-width="13%"/><!--Base Value-->
            <fo:table-column column-number="7" column-width="13%"/><!--Tax
							% -->
            <fo:table-column column-number="8" column-width="13%"/><!--Amt -->
            <fo:table-header font-family="arial" font-weight="bold">
              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block>#</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>كود المنتج</fo:block><!--SKU-->
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>الوصف</fo:block><!--Description-->
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>الكمية</fo:block><!--Quantity-->
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>ضريبة القيمة المضافة</fo:block><!--VAT %-->
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>الإجمالي بدون ضريبة</fo:block><!--Base total-->
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>ضريبة القيمة المضافة</fo:block><!--Tax total-->
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>الإجمالي شامل ضريبة القيمة المضافة</fo:block><!--Total-->
                </fo:table-cell>
              </fo:table-row>
            </fo:table-header>

            <fo:table-body>
              #foreach($item in $data.itemLines)
                <fo:table-row border="solid 0.5px black">
                  <fo:table-cell>
                    <fo:block>$foreach.count</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>#writeString($item.vendorSku)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>#writeString($item.itemName)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$item.quantity</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>% #writeItemTaxRate($item.subTaxItemData)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.baseSellingPriceTotal)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.netTaxAmountTotal)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.actualSellingPriceTotal)</fo:block>
                  </fo:table-cell>
                </fo:table-row>
              #end

              <!-- SubTotals -->
              <fo:table-row border="solid 0.5px black" font-family="arial" font-weight="bold">
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>المجموع الفرعي</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$data.quantity</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$math.roundTo(2, $data.subBaseAmount)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$math.roundTo(2, $data.subTaxAmount)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$math.roundTo(2, $data.subTotalAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>


              #foreach($item in $data.serviceLines)
                <fo:table-row border="solid 0.5px black">
                  <fo:table-cell>
                    <fo:block></fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block></fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>#writeString($item.itemName)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block></fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block></fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.basePrice)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.basePrice)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.taxAmount)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell>
                    <fo:block>$math.roundTo(2, $item.totalAmount)</fo:block>
                  </fo:table-cell>
                </fo:table-row>
              #end

              <!-- Final Totals -->
              <fo:table-row border="solid 0.5px black" font-family="arial" font-weight="bold">
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>المجموع</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$math.roundTo(2, $data.finalBaseAmount)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$math.roundTo(2, $data.finalTaxAmount)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>$math.roundTo(2, $data.finalTotalAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>

            </fo:table-body>
          </fo:table>


                    <fo:block font-family="arial" font-weight="bold" font-size="9pt">
                        <fo:leader leader-length="100%" leader-pattern="rule"
                                   rule-thickness="0px"/>
                        ملاحظات
                    </fo:block>
                    <fo:table padding-before="4pt">
                        <fo:table-body>
                            <fo:table-row border="solid 0.5px black">
                                <fo:table-cell height="1in">
                                    <fo:block>#writeString($data.remarks)</fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    #if($data.signatureUrl)
                    <fo:table>
                        <fo:table-body>

                            <fo:table-row>

                                <fo:table-cell text-align="right"  padding-before="6pt"  padding-after="3pt" display-align="after" margin-right="5mm">
                                    <fo:block>
                                        <fo:external-graphic content-height="10mm"
                                                             src="url('$data.signatureUrl')">
                                        </fo:external-graphic>
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                                <fo:table-cell text-align="right"   padding-after="3pt" display-align="after">
                                    <fo:block>توقيع معتمد   </fo:block>
                                </fo:table-cell>
                            </fo:table-row>

                            <fo:table-row>
                                <fo:table-cell text-align="right"   padding-after="2pt" display-align="after">
                                    <fo:block>For #writeString($data.vendorName) </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    #end

        </fo:flow>
      </fo:page-sequence>
    </fo:root>
  </xsl:template>
</xsl:stylesheet>

#macro(writeImageUrl $invoiceCancelled)
    #set($cancelledUrl='classpath:com/nextscm/commons/images/cancelled_image_1.jpg')
    #set($nonCancelledUrl='classpath:com/nextscm/commons/images/cancelled_image_2.jpg')
    #if($invoiceCancelled == true)
        $cancelledUrl
    #else
        $nonCancelledUrl
    #end
#end


#macro( writeAddress $add)
  #if($add)
  <fo:block>#writeString($add.name)</fo:block>
  <fo:block>#writeString($add.line1)</fo:block>
  <fo:block>#writeString($add.line2)</fo:block>
  <fo:block>
    #if($add.city)
      #writeString($add.city),
    #end
    #writeString($add.state)
    #if($add.stateCode)
     -
     #writeString($add.stateCode)
    #end
  </fo:block>

  <fo:block>
    #if($add.country)
      #writeString($add.country),
    #end
    #writeString($add.zip)
  </fo:block>
  <fo:block>#writeString($add.phone)</fo:block>
  <fo:block></fo:block>
  #end
#end

#macro( writeEmail $add)
  <fo:block>
       #writeString($add.email)
  </fo:block>
#end

#macro( writeTaxItems $subTaxItemData)
  #if($subTaxItemData)
    #foreach($taxItem in $subTaxItemData)
    |#writeString($taxItem.type): $math.roundTo(2, $taxItem.rate)
    #end
  |
  #end
#end

#macro( writeTaxItemsData $subTaxItemData)
  #if($subTaxItemData)
    #foreach($taxItem in $subTaxItemData)
    |#writeString($taxItem.type): $math.roundTo(2, $taxItem.subTaxTotal)
    #end
   |
  #end
#end

#macro( writeItemTaxRate $subTaxItemData)
  #set($taxRate = 0.0)
  #if($subTaxItemData)
    #foreach($taxItem in $subTaxItemData)
      #set($taxRate = $math.add($taxRate, $taxItem.rate))
    #end
  #end
  $math.roundTo(2, $taxRate)
#end

#macro( writeString $str)
  #if($str)
  <![CDATA[$str]]>
  #end
#end

#macro( writeBarcodeWithoutText $str)
  #if($str.toString().contains("&"))
    #set( $str = $str.replace("&", "&amp;") )
  #end
  #if($str.toString().contains("<"))
    #set( $str = $str.replace("<", "&lt;") )
  #end
  #if($str.toString().contains(">"))
    #set( $str = $str.replace(">", "&gt;") )
  #end
  #if($str.toString().contains("'"))
    #set( $str = $str.replace("'", "&apos;") )
  #end
  #if($str.toString().contains('"'))
    #set( $str = $str.replace('"', "&quot;") )
  #end
  #if($str)
  <fo:instream-foreign-object>
    <bc:barcode xmlns:bc="http://barcode4j.krysalis.org/ns"
                message="$str">
      <bc:code128>
        <bc:height>10mm</bc:height>
        <human-readable>
          <placement>none</placement>
        </human-readable>
      </bc:code128>
    </bc:barcode>
  </fo:instream-foreign-object>
  #end
#end

#macro( writeDateTime $dateTime)
  #if($dateTime)
    $date.format('dd MMM yyyy, hh:mm a', $dateTime)
  #end
#end
