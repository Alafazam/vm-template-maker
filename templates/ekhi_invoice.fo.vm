<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:fo="http://www.w3.org/1999/XSL/Format" version="1.0"
                xmlns:fox="http://xmlgraphics.apache.org/fop/extensions">
  <xsl:output encoding="UTF-8" indent="yes" method="xml"
              standalone="no" omit-xml-declaration="no"/>
  <xsl:template match="data">
    <fo:root language="EN" font-size="8pt" font-family="arial">
      <fo:layout-master-set>
        <fo:simple-page-master master-name="page-master"
                               page-height="297mm" page-width="210mm" margin-top="5mm"
                               margin-bottom="5mm" margin-left="5mm" margin-right="5mm">

          <fo:region-body region-name="body" background-image="url(#writeImageUrl($data.invoiceCancelled))"
                          background-color="transparent" fox:background-image-width="200mm"
                          fox:background-image-height="296mm"/>
          <fo:region-before region-name="header" extent="5mm"
                            margin-bottom="5mm" margin-top="5mm"/>
          display-align="before" precedence="true" />
          <fo:region-after region-name="footer" extent="5mm"
                           margin-bottom="5mm" margin-top="5mm"/>
        </fo:simple-page-master>
      </fo:layout-master-set>
      <fo:page-sequence master-reference="page-master">

        <fo:static-content flow-name="header">
          <fo:block>
          </fo:block>
        </fo:static-content>

        <fo:static-content flow-name="footer">
          <fo:block>
            <fo:leader leader-length="100%" leader-pattern="rule"
                       rule-thickness="0.5px"/>
          </fo:block>
          <fo:table table-layout="fixed" width="100%">
              <fo:table-body>
                  <fo:table-row>
                      <fo:table-cell padding-after="0pt">
                          <fo:block>
                            Page
                            <fo:page-number/>
                            (This is a system generated document and doesn't need signature)
                          </fo:block>
                       </fo:table-cell>
                       <fo:table-cell text-align="center" padding-before="2pt" padding-after="2pt"
                                                                      display-align="after">
                           <fo:block>Original for Recipient</fo:block>
                       </fo:table-cell>
                   </fo:table-row>
               </fo:table-body>
           </fo:table>
        </fo:static-content>

                <fo:flow flow-name="body" border-collapse="collapse"
                         reference-orientation="0">
                    <fo:table table-layout="fixed" width="100%">
                        <fo:table-body>
                            <fo:table-row>
                              <!-- logo -->
                                <fo:table-cell padding-after="0pt">
                                    <fo:block>
                                      <fo:external-graphic content-height="10mm"
                                                            content-width="32mm"
                                                            scaling="uniform"
                                                            padding-left="2pt"
                                                            src="url('$data.logoUrl')">
                                      </fo:external-graphic>
                                    </fo:block>
                                </fo:table-cell>
                                <!-- tax invoice heading -->
                                <fo:table-cell text-align="center" padding-before="2pt" padding-after="2pt"
                                               display-align="after">
                                    <fo:block>TAX INVOICE</fo:block>
                                </fo:table-cell>
                                <fo:table-cell text-align="center" padding-before="2pt" padding-after="2pt"
                                               display-align="after">
                                    <fo:block>#writeString($data.vendorName)</fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    <fo:block>
                        <fo:leader leader-length="100%" leader-pattern="rule"
                                   rule-thickness="0.5px"/>
                    </fo:block>
                    <!-- INVOICE INFORMATION -->
                    <fo:table table-layout="fixed" width="100%">
                        <fo:table-column column-width="proportional-column-width(50)"/>
                        <fo:table-column column-width="proportional-column-width(50)"/>
                        <fo:table-body>
                            <fo:table-row>
                                <fo:table-cell>
                                    <fo:block>Invoice #: #writeString($data.invoiceOrStockTransferNo)</fo:block>
                                    <fo:block>Invoice Time: #writeDateTime($data.invoiceOrStockTransferTime)</fo:block>
                                    <fo:block>Payment Terms: #writePaymentTerm($data.paymentInfo)</fo:block>
                                </fo:table-cell>

                                <fo:table-cell>
                                    <fo:block>Order #: #writeString($data.orderNo)</fo:block>
                                    <fo:block>Order Time: #writeDateTime($data.orderTime)</fo:block>
                                    <fo:block>Channel Name: #writeString($data.channelName)</fo:block>
                                    <fo:block>Channel Order/PO #: #writeString($data.channelOrderNo)</fo:block>
                                </fo:table-cell>
                            
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    <fo:block>
                        <fo:leader leader-length="100%" leader-pattern="rule"
                                   rule-thickness="0px"/>
                    </fo:block>

          <!-- ADDRESS & TAX -->
          <fo:table table-layout="fixed" width="100%">
            <fo:table-column column-width="proportional-column-width(10)"/>
            <fo:table-column column-width="proportional-column-width(30)"/>
            <fo:table-column column-width="proportional-column-width(30)"/>
            <fo:table-column column-width="proportional-column-width(30)"/>
            <fo:table-header font-weight="bold">
              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>  FROM TO  </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>  BILL TO  </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>  SHIP TO  </fo:block>
                </fo:table-cell>
              </fo:table-row>
            </fo:table-header>

            <fo:table-body>
              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block>Party Name : </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.fromPartyName)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.toPartyName)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.toPartyName)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block>GSTIN : </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.fromTaxId)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.toTaxId)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block>#writeString($data.toTaxId)</fo:block>
                </fo:table-cell>
              </fo:table-row>

                <fo:table-row border="solid 0.5px black">
                    <fo:table-cell>
                        <fo:block>PAN : </fo:block>
                    </fo:table-cell>
                    <fo:table-cell>
                        <fo:block>#writeString($data.panNo)</fo:block>
                    </fo:table-cell>
                    <fo:table-cell>
                        <fo:block></fo:block>
                    </fo:table-cell>
                    <fo:table-cell>
                        <fo:block></fo:block>
                    </fo:table-cell>
                </fo:table-row>

              <fo:table-row border="solid 0.5px black">
                <fo:table-cell>
                  <fo:block>Address : </fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block padding="2pt">#writeAddress($data.fromAddress)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block padding="2pt">#writeAddress($data.billingAddress)</fo:block>
                </fo:table-cell>
                <fo:table-cell>
                  <fo:block padding="2pt">#writeAddress($data.shippingAddress)</fo:block>
                </fo:table-cell>
              </fo:table-row>


              <fo:table-row border="solid 0.5px black">
                    <fo:table-cell>
                        <fo:block>Email : </fo:block>
                    </fo:table-cell>
                    <fo:table-cell>
                        <fo:block>#writeEmail($data.fromAddress)</fo:block>
                    </fo:table-cell>
                    <fo:table-cell>
                        <fo:block>#writeEmail($data.billingAddress)</fo:block>
                    </fo:table-cell>
                    <fo:table-cell>
                        <fo:block>#writeEmail($data.shippingAddress)</fo:block>
                    </fo:table-cell>
              </fo:table-row>

            </fo:table-body>
          </fo:table>

          <fo:block></fo:block>
          <fo:block></fo:block>

          <!-- LINE ITEMS -->
          <fo:block>
            <fo:leader leader-length="100%" leader-pattern="rule"
                       rule-thickness="0px"/>
            Invoice Items
          </fo:block>

          <fo:table width="100%" table-layout="fixed">
            <fo:table-column column-number="1" column-width="4%"/> <!--S.No-->
            <fo:table-column column-number="2" column-width="16%"/><!--Item/Sku Id-->
            <fo:table-column column-number="3" column-width="16%"/><!--Hsn code -->
            <fo:table-column column-number="4" column-width="4%"/><!--Size-->
            <fo:table-column column-number="5" column-width="25%"/><!--Description of goods -->
            <fo:table-column column-number="6" column-width="7%"/><!--Total quantity-->
            <fo:table-column column-number="7" column-width="10%"/><!--Base selling price per unit-->
            <fo:table-column column-number="8" column-width="8%"/><!--GST Rate-->
            <fo:table-column column-number="9" column-width="10%"/><!--Amount-->
            <fo:table-header font-weight="bold">
              <fo:table-row border="solid 0.5px black">
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>S.No.</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>Item/ Sku Id</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>H.S.N.Code</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>Size</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>Description of Goods</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>Total qty. (In Pcs)</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>Rate / Pc (INR)</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>GST Rate</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>Amount (INR)</fo:block>
                </fo:table-cell>
              </fo:table-row>
            </fo:table-header>

            <fo:table-body>
              #foreach($item in $data.itemLines)
                <fo:table-row border="solid 0.5px black">
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>$foreach.count</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>#writeString($item.vendorSku)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>#writeString($item.hsnId)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>#writeString($item.size)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>#writeString($item.itemName)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>$item.quantity</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>$math.roundTo(2, $item.baseSellingPricePerUnit)</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>#writeGst($item)%</fo:block>
                  </fo:table-cell>
                  <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>$math.roundTo(2, $item.baseSellingPriceTotal)</fo:block>
                  </fo:table-cell>
                </fo:table-row>
              #end
              
              <!-- Totals -->
              <fo:table-row border="solid 0.5px black" font-weight="bold">
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                    <fo:block>Total</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$data.quantity</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$math.roundTo(2, $data.finalBaseAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <!-- Sub Tax Totals -->
              <fo:table-row border="solid 0.5px black" font-weight="bold">
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>Net Weight</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>#writeString($data.totalWeight) kg</fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>ADD: CGST</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$math.roundTo(2, $data.totalCgstAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <fo:table-row border="solid 0.5px black" font-weight="bold">
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>ADD: SGST</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$math.roundTo(2, $data.totalSgstAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <fo:table-row border="solid 0.5px black" font-weight="bold" text-align="center">
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>ADD: IGST</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$math.roundTo(2, $data.totalIgstAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <!-- Shipping Charges -->
              <fo:table-row border="solid 0.5px black" font-weight="bold">
                <fo:table-cell number-columns-spanned="5" border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>Shipping Charges</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$math.roundTo(2, $data.shippingAmount)</fo:block>
                </fo:table-cell>
              </fo:table-row>

              <fo:table-row border="solid 0.5px black" font-weight="bold">
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>Amount Chargable In: INR</fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="3" border="solid 0.5px black" text-align="center">
                  <fo:block>$data.totalAmountInWords $data.primaryCurrencyUnit and $data.totalAmountCents $data.secondaryCurrencyUnit</fo:block>
                </fo:table-cell>
                <fo:table-cell number-columns-spanned="2" border="solid 0.5px black" text-align="center">
                  <fo:block>TOTAL INVOICE VALUE (INR)</fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block></fo:block>
                </fo:table-cell>
                <fo:table-cell border="solid 0.5px black" text-align="center">
                  <fo:block>$math.roundTo(2, $data.finalTotalAmount)</fo:block>
                </fo:table-cell>
            
              </fo:table-row>
            </fo:table-body>
            </fo:table>

                    <fo:block font-weight="bold">
                        <fo:leader leader-length="100%" leader-pattern="rule"
                                   rule-thickness="0px"/>
                        Declaration:
                    </fo:block>
                    <fo:block></fo:block>
                    <fo:table>
                        <fo:table-body>
                            <fo:table-row>
                                <fo:table-cell>
                                    <fo:block>
                                      1.We declare that this invoice shows the actual price of the goods described and that all particulars given above are true and correct.
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                <fo:block></fo:block>
                              </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                    <fo:block>
                                      2.Certified that the description and value of goods covered by this Invoice has been checked by me and the goods
                                    </fo:block>
                                    <fo:block>
                                      have been packed and sealed in my presence.
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                    <fo:block>
                                      Name on the Account: EKHI FASHIONS PRIVATE LIMITED
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                    <fo:block>
                                      Account No: 10142266931
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                    <fo:block>
                                      IFSC Code : IDFB0080168
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                    <fo:block>
                                      Account Type: Current Account
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                              <fo:table-cell>
                                    <fo:block>
                                      Branch: Frazer Town, Bangalore
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>

                    <fo:block>
                    </fo:block>
                    
                    #if($data.signatureUrl)
                    <fo:table>
                        <fo:table-body>

                            <fo:table-row>

                                <fo:table-cell text-align="right"  padding-before="6pt"  padding-after="3pt" display-align="after" margin-right="5mm">
                                    <fo:block>
                                        <fo:external-graphic content-height="10mm"
                                                             src="url('$data.signatureUrl')">
                                        </fo:external-graphic>
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                                <fo:table-cell text-align="right"   padding-after="3pt" display-align="after">
                                    <fo:block>Authorized Sign   </fo:block>
                                </fo:table-cell>
                            </fo:table-row>

                            <fo:table-row>
                                <fo:table-cell text-align="right"   padding-after="2pt" display-align="after">
                                    <fo:block>For #writeString($data.vendorName) </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                    #end

        </fo:flow>
      </fo:page-sequence>
    </fo:root>
  </xsl:template>
</xsl:stylesheet>

#macro(writeImageUrl $invoiceCancelled)
    #set($cancelledUrl='classpath:com/nextscm/commons/images/cancelled_image_1.jpg')
    #set($nonCancelledUrl='classpath:com/nextscm/commons/images/cancelled_image_2.jpg')
    #if($invoiceCancelled == true)
        $cancelledUrl
    #else
        $nonCancelledUrl
    #end
#end


#macro( writeAddress $add)
  #if($add)
  <fo:block>#writeString($add.name)</fo:block>
  <fo:block>#writeString($add.line1)</fo:block>
  <fo:block>#writeString($add.line2)</fo:block>
  <fo:block>
    #if($add.city)
      #writeString($add.city),
    #end
    #writeString($add.state)
    #if($add.stateCode)
     -
     #writeString($add.stateCode)
    #end
  </fo:block>

  <fo:block>
    #if($add.country)
      #writeString($add.country),
    #end
    #writeString($add.zip)
  </fo:block>
  <fo:block>#writeString($add.phone)</fo:block>
  <fo:block></fo:block>
  #end
#end

#macro( writeEmail $add)
  <fo:block>
       #writeString($add.email)
  </fo:block>
#end

#macro( writePaymentTerm $paymentInfo)
  <fo:block>
